<!DOCTYPE html>
<html>
  <head>
    <title>Bugzilla</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <% if current_user %>
  
  <%= link_to "Log Out", destroy_user_session_path,method: :delete %>  <br><br><br>
  <% else %>
  <%= link_to "Sign Up", new_user_registration_path%>  <br><br><br>
  <%= link_to "Log In", new_user_session_path%>  <br><br><br>
  <% end %>
  <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>
    <%= yield %>
  </body>
</html>
